<% provide :title, "All Reviews" %>

<div class="row">
  <div class="col-md-12">
    <div class="row center">
      <h1>All Reviews</h1>
      <%= link_to "New Review", new_review_path, class: "btn btn-primary" if current_user %>
    </div>
    <div class="row pull-right col-md-4">
      <br>
        <div class="search-box">
          <%= search_form_for @search, remote: true do |f| %>
            <div class="field">
              <%= f.text_field :title_or_content_cont %>
            </div>
            <div class="actions"><%= f.submit "Search" %></div>
          <% end %>
        </div>
        <div class="filter">
          Order by: <%= link_to "Submitted", sort: "created_at", direction: "desc",
            remote: true %> | <%= link_to "View Count", sort: "counter_cache",
            direction: "desc", remote: true %>
        </div>
    </div>

    <div class="row pull-left col-md-8" id="reviews">
      <%= render @reviews %>
    </div>

  </div>
  <div class="row center">
    <%= paginate @reviews, window: 3, remote: true %>
  </div>
</div>
