<% provide :title, "Review" %>
<div class="row">
  <div class="col-md-12">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <div class="row review-content">
            <h3><%= @review.title.html_safe %></h3>
            <div class="quote">
              A Review for <%= link_to @review.device.name, @review.device %> by
              <%= @review.user.name %> - <%= @review.created_at.strftime("%d/%m/%Y %H:%M %Z") %></span>
            </div>
            <div class="quote"><%= @review.summary %></div>
            <% if @review.the_good.present? && @review.the_bad.present? %>
              <%= render "compares" %>
            <% end %>
            <div class="content review-body"><%= @review.content.html_safe %></div>
            <div class="author">
              <span class="glyphicon glyphicon-user" aria-hidden="true"><%= @review.user.name %></span>

            </div>
            <% if (@review.score_design != 1) && (@review.score_screen != 1) &&
              (@review.score_performance != 1) && (@review.score_battery != 1) &&
              (@review.score_camera != 1) %>
              <%= render "scores" %>
            <% end %>
          </div>

          <hr>
          <div class="row">
            <div class="comment-title">
              <b>Comments</b>
            </div>
            <div class="comment-box">
              <div id="comments-list">
                <% if @review.comments.any? %>
                  <%= render @review.comments %>
                <% end %>
              </div>
              <div id="comment-form">
                <% if user_signed_in? %>
                  <%= render "comments/form", comment: @comment, review: @review %>
                <% else%>
                  <div class="center">
                    Please <%= link_to "Sign In", new_user_session_path %> to leave a comment!
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="center">
            <br />
            <%= link_to "Back to All Reviews", reviews_path, class: "btn btn-default" %>
          </div>
        </div>

        <div class="col-md-4">
          <div id="sidebar">
            <div class="hot-review">
              <h3 class="center">Hot Reviews of the Month</h3>
              <%= render partial: "hot_review", collection: @hot_reviews %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
